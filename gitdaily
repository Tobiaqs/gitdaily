#!/bin/bash

ARGS=" $@ "

# http://misc.flogisoft.com/bash/tip_colors_and_formatting
META_COLOR="\e[92m"
BASIC_COLOR="\e[36m"
SUBHEADING_COLOR="\e[96m"
UNDERLINE_ON="\e[4m"
UNDERLINE_OFF="\e[24m"
GRAY_BG_ON="\e[100m"
GRAY_BG_OFF="\e[49m"
BOLD_ON="\e[1m"
BOLD_OFF="\e[21m"

VERSION="0.2.2"

if [[ "$ARGS" == *" -v "* || "$ARGS" == *" --version "* ]]; then
	echo -en "$META_COLOR$GRAY_BG_ON$BOLD_ON"
	echo -en "GitDaily $VERSION"
	echo -e "$BOLD_OFF$GRAY_BG_OFF"
	exit 0
fi

echo -en "$META_COLOR$GRAY_BG_ON$BOLD_ON"
echo -en "GitDaily"
echo -e "$BOLD_OFF$GRAY_BG_OFF"

if [[ "$ARGS" == *" -h "* || "$ARGS" == *" --help "* ]]; then
	echo -en "$META_COLOR"
	echo "GitDaily will look for a configuration file in ~/.config/gitdaily_paths."
	echo -e "See the readme for more information on the format of this file."
	echo
	echo -e "Usage:"
	echo
	echo "  -h/--help	Show help message"
	echo "  -v/--version	Display version"
	echo "  -a		View status for all repositories, even clean ones"
	echo "  -c		Compact view"
	echo "  -l		Run locally, view status of current directory"
	echo "  -ls		Run locally, view status of subdirectories"
	echo
	exit 0
fi

function iteration {
	if [[ -d "$dir" && -d "$dir/.git" ]]; then
		GIT_STATUS=`git -C "$dir" status`
		if [[ "$GIT_STATUS" != *"working directory clean"* ]]; then
			echo -en "$HEADING_COLOR"
			echo -en "$UNDERLINE_ON"
			echo -n `basename "$dir"`
			echo -en "$UNDERLINE_OFF"
			if [[ "$ARGS" != *" -c "* ]]; then
				echo
				GIT_STATUS_FILTERED=`echo "$GIT_STATUS" | grep "^	\|^Untracked files:\|^Changes not staged for commit:$\|^Changes to be committed:$"`

				while read -r line; do
					if [[ `echo "$line" | grep "^Untracked files:\|^Changes not staged for commit:$\|^Changes to be committed:$"` != "" ]]; then
						echo -e "$SUBHEADING_COLOR	$line"
					else
						echo -e "$BASIC_COLOR		$line"
					fi
				done <<< "$GIT_STATUS_FILTERED"
				echo
			else
				echo -e "$SUBHEADING_COLOR is not clean."
			fi
		elif [[ "$ARGS" == *" -a "* ]]; then
			echo -en "$HEADING_COLOR"
			echo -en "$UNDERLINE_ON"
			echo -n `basename "$dir"`
			echo -en "$UNDERLINE_OFF"
			echo -e "$SUBHEADING_COLOR is clean."
		fi
	fi	
}

function terminate {
	if [[ "$ARGS" == *" -c "* ]]; then
		echo
	fi

	echo -en "\e[39m"
}

if [[ "$ARGS" == *" -ls "* ]]; then
	INPUT="`pwd`/*"
elif [[ "$ARGS" == *" -l "* ]]; then
	INPUT="`pwd`"
else
	if [[ -d "$HOME/.config" && -f "$HOME/.config/gitdaily_paths" ]]; then
		INPUT="`cat $HOME/.config/gitdaily_paths`"
	else
		echo -en "$META_COLOR"
		echo -e "Configuration file doesn't exist at ~/.config/gitdaily_paths"
		echo
		terminate
	fi
fi

while read -r line; do
	if [[ "$line" == *"/*"* ]]; then
		HEADING_COLOR="\e[92m"
		line=`eval echo "${line%/*}"`
		if [ -d "$line" ]; then
			for dir in $line/*; do
				iteration
			done
		else
			echo "$dir (from config) does not exist!"
		fi
	else
		dir=`eval echo "$line"`
		HEADING_COLOR="\e[33m"
		if [ -d "$dir" ]; then
			iteration
		else
			echo "$dir (from config) does not exist!"
		fi
	fi
done <<< "$INPUT"

terminate
